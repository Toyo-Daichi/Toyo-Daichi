{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "right",
      "overflow": "hide",
      "segments": [
        {
          "type": "executiontime",
          "style": "powerline",
          "foreground": "#a9ffb4",
          "template": " {{ .FormattedMs }}s ",
          "properties": {
            "threshold": 0,
            "style": "dallas"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "overflow": "break",
      "segments": [
        {
          "foreground": "#56B6C2",
          "style": "powerline",
          "template": "{{.UserName }} on {{ .Icon }} : ",
          "type": "os"
        }, 
        {
          "type": "path",
          "style": "powerline",
          "foreground": "#56B6C2",
          "properties": {
            "style": "agnoster_full",
            "home_icon": "home",
            "folder_icon": "\uf07b",
            "folder_separator_icon": " \u276f "
          },
          "template": "\ueb06 {{ .Path }} "
        },
        {
          "foreground": "#ffffff",
          "properties": {
            "branch_max_length": 30,
            "fetch_stash_count": false,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": "[ {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ]",
          "type": "git"
        }
      ]
    },
    {
      "alignment": "left",
      "newline": true,
      "type": "prompt",
      "segments": [
        {
          "type": "status",
          "style": "diamond",
          "foreground": "#00c7fc",
          "properties": {
            "always_enabled": true
          },
          "template": "\u279c "
        }
      ]
    }
  ],
  "console_title_template": "{{ .Folder }}",
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#FEF5ED",
    "template": "{{ .Shell }}"
  },
  "version": 2
}
